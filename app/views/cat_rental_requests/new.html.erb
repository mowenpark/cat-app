<h2>Rent a Cat!</h2>

<!-- Url helper -->
<form action="<%=cat_rental_requests_url%>" method="post">
  <input type="hidden" name="_method" value=<%=@cat_rental_request.persisted? ? 'PATCH' : 'POST' %>>
  <select name="cat_rental_request[cat_id]" id="cat_names">
    <option value="<option>">Cat</option>
    <% Cat.all.each do |cat| %>
      <option value="<%=cat.id %>"><%=cat.name %></option>
    <% end %>
  </select>
  <br>
  <label for="at_rental_request_startdate">Start Date</label>
  <input type='date' name="cat_rental_request[start_date]" value='<%= @cat_rental_request.start_date %>'>
  <br>
  <label for="at_rental_request_enddate">End Date</label>
  <input type='date' name="cat_rental_request[end_date]" value='<%= @cat_rental_request.end_date %>'>
  <br>
  <input type="submit" value="create">
</form>
